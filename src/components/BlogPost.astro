---
import MainDiv from './MainDiv.astro';

interface Props {
    title: string;
    date: string;
    description: string;
    link: string;
}

---

<article>
    <h3 class="my-2"><a href={Astro.props.link}>{Astro.props.title}</a></h3>
    <p class="mt-1 mb-1 ml-2">{Astro.props.description}</p>
    <p class="mt-0 ml-2"><small class="my-0">{Astro.props.date}</small></p>
</article>