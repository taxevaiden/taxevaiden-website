---
import MainDiv from './MainDiv.astro';

interface Props {
    title: string;
    date: string;
    description: string;
    link: string;
}

---

<MainDiv>
    <h3 class="my-2"><a href={Astro.props.link}>{Astro.props.title}</a></h3>
    <p class="my-1">{Astro.props.description}</p>
    <p class="my-1"><small class="my-0">{Astro.props.date}</small></p>
</MainDiv>