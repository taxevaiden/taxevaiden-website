---
import MainDiv from '../main/MainDiv.astro';

//interface Props {
//  links: string; //home,index;about,about
//}

//const { links } = Astro.props;
//const linksArray = links.split(";");

const links = [
    {
        name: "home",
        link: "/",
        subLinks: [
            {
                name: "IMPORTANT NOTES!",
                includePage: true,
                link: "#important-notes"
            },

            {
                name: "Q&A",
                includePage: true,
                link: "#qna"
            }
        ]
    },

    {
        name: "about",
        link: "/about",
        subLinks: [
            {
                name: "source code",
                includePage: true,
                link: "#source-code"
            },
        ]
    },

    {
        name: "projects",
        link: "/projects",
        subLinks: []
    },

    {
        name: "changelog",
        link: "/changelog",
        subLinks: []
    },

    {
        name: "blog",
        link: "/blog",
        subLinks: [
            {
                name: "rss",
                includePage: false,
                link: "/rss.xml"
            }
        ]
    }
]
---
<MainDiv title="navigation" class="-mt-4" random>
    <!-- <p class="w-[9rem] mt-8 text-default-text2">
        the arm was covering "navigation". idk what to do with this blank space so here u go
    </p> -->

    <ul class="list-none list-image-none">
        {links.map((link =>
            <li><a href={link.link} class="inline px-2">{link.name}</a></li>
            <ul class="list-none list-image-none mb-0">
                {link.subLinks.map(((subLink, index) =>
                    <li>
                        {subLink.includePage ? (
                            <span><a href={link.link + subLink.link} class="inline px-2">
                            {index === link.subLinks.length - 1 ? (
                                <span>&#9492;</span>
                            ) : (
                                <span class="pl-[.2em]">&#9500;&ThinSpace;</span>
                            )}
                            {subLink.name}
                            </a></span>
                        ) : (
                            <span><a href={subLink.link} class="inline px-2">
                            {index === link.subLinks.length - 1 ? (
                                <span>&#9492;</span>
                            ) : (
                                <span class="pl-[.2em]">&#9500;</span>
                            )}
                            {subLink.name}
                            </a></span>
                        )}
                    </li>
                ))}
            </ul>
        ))}
    </ul>
</MainDiv>
