---
interface Props {
  links: string; //home,index;about,about
}

const { links } = Astro.props;
const linksArray = links.split(";");
---

<div id="navigationBar" class="navigation_bar">
  {linksArray.map(link => {
    const [text, url] = link.split(",");
    return <a href={url} class="navigation_bar_item">{text}</a>;
  })}
</div>

<style>
    .navigation_bar {
        margin: auto;
		margin-bottom: 20px;
		max-width: 650px;

		padding: 1em;

		border-style: dotted;
		border-width: 1px;
		border-color: black;
		
		background-color: white;

		box-shadow: 0px 10px rgba(0, 0, 0, 0.5);
    }

    .navigation_bar_item {
        padding-left: 0.5em;
        padding-right: 0.5em;
    }
    
</style>
