    small?: boolean;
}

const { small = false } = Astro.props;

changes.sort((a, b) => new Date(b.date).getTime() - new Date(a.date).getTime());
---

<MainDiv title="changelog">
    <slot />

    <MainDiv title=" ">
        <div class={`-m-4 p-4 ${small && "overflow-y-scroll h-48"}`}>
            {
                changes.map((change) => (
                    <Card
                        title={change.title}
                        date={change.date}
                        description={change.description}
                    >
                        <ul>
                            {change.descriptionBulleted.map((bullet) => (
                                <li class="pl-2">{bullet}</li>
                            ))}
                        </ul>
                    </Card>
                ))
            }
        </div>
    </MainDiv>
</MainDiv>
