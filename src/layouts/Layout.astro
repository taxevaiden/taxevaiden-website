---
import Image from 'astro/components/Image.astro';
import { Code } from 'astro:components';
import banner from '../images/banner.png'
import NavigationDiv from '../components/NavigationDiv.astro';
import MainDiv from '../components/MainDiv.astro';

import websiteButton from '../images/88x31button.gif';
import websiteIcon from '../images/icons/icon.png'

interface Props {
	title: string;
	description: string;
}

const { title } = Astro.props;
const { description } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=DotGothic16&display=swap" rel="stylesheet">

		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<title>{title}</title>
		<meta name="description" content={description} />
		<meta name="generator" content={Astro.generator} />
		<meta content="#ffffff" data-react-helmet="true" name="theme-color">
		<meta content={websiteIcon.src} property="og:image" />
		<link rel="icon" type="image/svg+xml" href={websiteIcon.src} />
	</head>
	<body>
		<div class="max-w-fit mx-auto flex justify-center min-w-screen gap-4 flex-col bg-default-light-div2 dark:bg-default-dark-div2 border border-default-light-border dark:border-default-dark-border border-solid shadow-d p-4 backdrop-blur-sm">
			<div class="relative text-center">
				<Image src={banner} alt="the banner!" loading='eager' class="w-[70rem] border border-default-light-border dark:border-default-dark-border border-dotted shadow-d"></Image>
				<h1 class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 text-8xl text-white drop-shadow-bigtitle">taxevaiden</h1>
			</div>
			<div class="flex flex-row max-w-fit gap-4">
				<div class="w-[16rem] basis-auto">
					<NavigationDiv links="home,/;about,/about;projects,/projects;blog,/blog" />
					<MainDiv>
						<h1>link me!</h1>
						<a href="https://taxevaiden.pages.dev"><img src={websiteButton.src} alt="the website button!"></a>
						<Code code="&lt;a href=&quot;https://taxevaiden.pages.dev&quot;&gt;&lt;img src=&quot;/src/images/misc/88x31button.gif&quot;&gt;&lt;/a&gt;" lang="html"></Code>
					</MainDiv>
				</div>
				<div class="w-[36rem] basis-auto">
					<slot />
				</div>
				<div class="w-[16rem] basis-auto">
					<MainDiv>
						<h1><a href="https://status.cafe/">status.cafe</a></h1>
	
							<div id="statuscafe" class="p-4 bg-default-light-div dark:bg-default-dark-div border border-dotted border-default-light-border dark:border-default-dark-border shadow-d mb-4"><div id="statuscafe-username" class="mb-2"></div><div id="statuscafe-content" class="mx-2 mb-2"></div></div><script src="https://status.cafe/current-status.js?name=aiden20121" defer></script>
					
							<h1><a href="https://internetometer.com/">internets</a></h1>
				
							<a href='http://internetometer.com/give/50492'><img src='http://internetometer.com/image/50492.png' alt="internetometer"/></a>
					</MainDiv>
				</div>
				
			</div>
		</div>
		
	</body>
</html>
